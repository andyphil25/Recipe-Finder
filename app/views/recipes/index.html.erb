<%= form_tag recipes_index_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<h1>Searching for - <%= @search_term %></h1>

<% if  @recipes %>
  

  <table border="1">
    <tr>
    	<th>Image</th>
    	<th>Title</th>
    	<th>Social Rank</th>
    </tr>
    <% @recipes.each do |recipe| %>
      <tr class=<%= cycle('even', 'odd') %>>
        <td><%= link_to image_tag(recipe["image_url"],  height: '100', width: '100') , recipe["source_url"]  %></td>
        <td><%= link_to sanitize(recipe["title"]) , recipe["source_url"] %></td>
        <td><%= recipe["social_rank"] %></td>
      </tr>
    <% end %>

  </table>
<% end %>
