


<% if @recipes %>

  <h2>Searching for - <%= @search_term %></h2>

  <div class="row">
        
    <% @recipes.each do |recipe| %>
      

      <div class="col-lg-4 col-xs-6 text-center">
        <%= link_to recipe_path(:id => recipe.id, :search => @search_term) do %>
          <div class="recipe-tile">
            <%= image_tag(recipe["image_url"],  height: '200', width: '200')  %>
            <span><%= sanitize(recipe["title"]) %></span>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

<% end %>
